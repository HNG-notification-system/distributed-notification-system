# Server Configuration
PORT=3002
NODE_ENV=development
SERVICE_NAME=email-service

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
EMAIL_QUEUE=email.queue
FAILED_QUEUE=failed.queue
EXCHANGE_NAME=notifications.direct
PREFETCH_COUNT=10

# SMTP Configuration (Gmail Example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
# NOTE: SMTP_USER and SMTP_PASSWORD are REQUIRED in production. Docker Compose provides safe local defaults for development.
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourapp.com
FROM_NAME=YourApp Notifications

# Alternative: SendGrid API (uncomment to use)
# SENDGRID_API_KEY=your-sendgrid-api-key

# Alternative: Mailgun API (uncomment to use)
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=your-domain.mailgun.org

# Template Service
TEMPLATE_SERVICE_URL=http://localhost:3003

INTERNAL_SERVICE_KEY=''

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
INITIAL_RETRY_DELAY=1000
MAX_RETRY_DELAY=60000
RETRY_MULTIPLIER=2

# Monitoring
LOG_LEVEL=info
