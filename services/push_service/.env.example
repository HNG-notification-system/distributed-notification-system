# General Application Settings

# Port on which the push service runs
PORT=3004

# Environment mode: development | production | test
NODE_ENV=development

# RabbitMQ Configuration
# Full RabbitMQ connection string (username, password, host, vhost)
RABBITMQ_URL=amqps://username:password@hostname/vhost

# Queue name used for handling push notifications
RABBITMQ_QUEUE_NAME=push.queue

#  Redis Configuration
# Redis connection URL (used for caching and retry tracking)
REDIS_URL=redis://redis:6379/0

#  User Service Configuration
# Base URL for the User Service (for fetching device tokens or preferences)
USER_SERVICE_URL=http://user-service:3000

#  Web Push (Browser Notifications)

# Public VAPID key used for authenticating Web Push messages
VAPID_PUBLIC_KEY=your_public_vapid_key_here

# Private VAPID key used by the server to sign push messages
VAPID_PRIVATE_KEY=your_private_vapid_key_here

# Contact email for push notification authentication
VAPID_EMAIL=your_email@example.com

#  Logging & Debug
LOG_LEVEL=info

# Enable detailed debug logs (true/false)
ENABLE_DEBUG=false
